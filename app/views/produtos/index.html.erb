<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Produtos</title>
  </head>
  <body class="mt-3">
    <div class="container">
      <div class="alert alert-success">
        <h3>Produto com menor preço</h3>
      </div>
      <table class="table">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Quantidade</th>
        </tr>
        </thead>
        <tbody>
        <% @produto_menor_preco.each do |produto| %>
          <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.preco %></td>
            <td><%= produto.quantidade %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex flex-row justify-content-between mb-3">
        <h3>Lista de produtos</h3>
        <%= link_to content_tag(:i, "", class: "fas fa-plus-circle"), new_produto_path, class: "btn btn-primary" %>
      </div>
      <table class="table table-striped table-hover">
        <thead class="thead-light">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Quantidade</th>
          <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @produtos.each do |produto| %>
          <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.preco %></td>
            <td><%= produto.quantidade %></td>
            <td>
              <%= link_to content_tag(:i, "", class:"fas fa-eraser"), produto, method: :delete, class:"btn btn-danger" %>
              <%= link_to content_tag(:i, "", class:"fas fa-edit"), edit_produto_path(produto), class:"btn btn-primary" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>